<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondonegro"
    android:orientation="vertical"
    tools:context=".perfil">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView32"
            style="@style/WhiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/pixeltype"
            android:text="Usando actualmente"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/pixeltype"
                android:gravity="center"
                android:textColor="@color/morado"
                android:textSize="40sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    style="@style/WhiteText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pixeltype"
                    android:gravity="center"
                    android:text="Nivel:"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/profile_nivel"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:fontFamily="@font/pixeltype"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/amarillo"
                    android:textSize="70sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/profile_pb"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="77dp" />

                    <TextView
                        android:id="@+id/profile_exp"
                        style="@style/WhiteText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/pixeltype"
                        android:gravity="end"
                        android:textSize="25dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/WhiteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pixeltype"
                    android:text="Nombre: "
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/pixeltype"
                    android:gravity="end"
                    android:textColor="@color/amarillo"
                    android:textSize="35sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/morado"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/WhiteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pixeltype"
                    android:text="Dinero: "
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_dinero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/pixeltype"
                    android:gravity="center|end"
                    android:textColor="@color/amarillo"
                    android:textSize="35sp" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/coin" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/morado"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/profile_signout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pesstart"
            android:text="cerrar sesiÃ³n"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btCambiar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/pesstart"
            android:text="cambiar"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView32">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/fondonegro">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="@font/minecraftia"
                        android:gravity="center"
                        android:text="Memory"
                        android:textColor="@color/azul"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/dorso_memory"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:src="@drawable/dorso" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/fondonegro">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="@font/minecraftia"
                        android:gravity="center"
                        android:text="3 en raya"
                        android:textColor="@color/rosa"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/fichas_tresraya"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"

                        android:src="@drawable/xo_negro" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/fondonegro">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="@font/minecraftia"
                        android:gravity="center"
                        android:text="Flappy"
                        android:textColor="@color/verde"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/pajaro"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"

                        android:src="@drawable/pajaro1" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>