<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondonegro"
    tools:context=".puzzle_porcenaje">

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="340dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRelleno" />

    <TextView
        android:id="@+id/tvNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/minecraftia"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/amarillo"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar2" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:fontFamily="@font/ka"
        android:gravity="center"
        android:textColor="@color/morado"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.421" />

    <TextView
        android:id="@+id/tvColor"
        android:layout_width="300dp"
        android:layout_height="28dp"
        android:layout_marginTop="76dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/contenedor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/contenedor"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRelleno"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/amarillo"
        app:layout_constraintBottom_toBottomOf="@+id/contenedor"
        app:layout_constraintEnd_toEndOf="@+id/contenedor"
        app:layout_constraintStart_toStartOf="@+id/contenedor"
        app:layout_constraintTop_toBottomOf="@+id/tvColor" />

    <ImageView
        android:id="@+id/contenedor"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvColor"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>